<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>System Monitor<%= typeof title !== 'undefined' ? ` - ${title}` : '' %></title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

    <!-- General styles -->
    <link rel="stylesheet" href="/css/styles.css">
    <!-- Specific styles -->
    <%- typeof css_block !== 'undefined' ? css_block : '' %>
</head>
<body>
    <!-- Sidebar -->
    <nav id="sidebar" class="sidebar">
        <div class="sidebar-brand">
            <i class="bi bi-cpu"></i>
            <span class="sidebar-brand-text">SysMonitor</span>
        </div>

        <ul class="sidebar-nav">
            <li class="sidebar-nav-item">
                <a href="/" class="sidebar-nav-link <%= typeof activePage !== 'undefined' && activePage === 'dashboard' ? 'active' : '' %>">
                    <i class="bi bi-speedometer2"></i>
                    <span class="sidebar-nav-text">Dashboard</span>
                </a>
            </li>
            <li class="sidebar-nav-item">
                <a href="/about" class="sidebar-nav-link <%= typeof activePage !== 'undefined' && activePage === 'about' ? 'active' : '' %>">
                    <i class="bi bi-info-circle"></i>
                    <span class="sidebar-nav-text">About</span>
                </a>
            </li>
        </ul>

        <div class="sidebar-footer">
            <button id="sidebar-toggle" class="sidebar-toggle-btn" title="Toggle sidebar">
                <i class="bi bi-chevron-left"></i>
            </button>
        </div>
    </nav>

    <!-- Main content wrapper -->
    <main id="main-content" class="main-content">